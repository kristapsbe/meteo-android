<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Meteo_android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Meteo_android.AppWidgetContainer">

    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="78dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/appwidget_text"
        android:contentDescription="@string/weather_icon"
        android:src="@drawable/sun" />

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.Meteo_android.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="22sp"
        android:textStyle="bold|italic" />
</RelativeLayout>